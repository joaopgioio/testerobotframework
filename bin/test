#!/usr/bin/env bash

curl https://s3.amazonaws.com/heroku-jvm-buildpack-vi/vim-7.3.tar.gz --output vim.tar.gz
mkdir vim && tar xzvf vim.tar.gz -C vim
export PATH=$PATH:/app/vim/bin

# set phantomjs to PATH
echo "Setting HEROKU environment for chromedriver binary: "
#export PATH="$PATH:$HOME/vendor/phantomjs/bin/"
export PATH="$PATH:$HOME/.chromedriver/bin"
#export PATH="$PATH:$HOME/result"
#export PATH="$PATH:$HOME/webdriver"
# your own made Robot libraries add them eg. here
export PYTHONPATH="$HOME:$PYTHONPATH"

# check that PATH was updated
set | grep PATH
# echo "Running phantomjs from" `which phantomjs`
# echo "Phantomjs version: " `phantomjs --version`

#robot --variable browser:phantomjs ./intercompany_test.robot
robot ./intercompany_test.robot